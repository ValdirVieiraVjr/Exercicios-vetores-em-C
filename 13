/*Fac ̧a um programa que preencha um vetor com 10 numeros reais, calcule e mostre a  ́
quantidade de numeros negativos e a soma dos n  ́ umeros positivos desse vetor.  ́*/


#include<stdio.h>

int main(){
	
	int v[10], i, negativo = 0, positivo = 0;
	
	printf("Digite 10 números:\n");
	
	for(i=0; i<10; i++){
		
		scanf("%d", &v[i]);
		
		if(v[i] < 0) negativo++;
		else if(v[i] > 0) positivo +=v[i];
		
	}
	
	printf("Quantidade de numeros negativos: %d\nSoma dos numeros positivos: %d\n", negativo, positivo);
	
}
